{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/cli/**/*.ts", "src/server/**/*.ts"]
}
